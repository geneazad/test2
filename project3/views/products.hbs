<h1>Products</h1>

<h2>Add Product</h2>
<form class='storeForm' action="/products" method="POST">
    <label>Name:</label>
    <input type="text" name="product_name" required>
    <label>Price:</label>
    <input type="number" step="0.01" name="price" required>
    <label>Inventory Quantity:</label>
    <input type="number" name="inventory_quantity" min="0" required>
    <label>Category:</label>
    <select name="category_id_category" required>
        {{#each categories}}
            <option value="{{id_category}}">{{category_name}}</option>
        {{/each}}
    </select>
    <button type="submit">Add Product</button>
</form>

<hr>

<h2>Existing Products</h2>
<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{id_product}}</td>
            <td>{{product_name}}</td>
            <td>${{price}}</td>
            <td>{{inventory_quantity}}</td>
            <td>{{category}}</td>
            <td>
                <form action="/products/delete/{{id_product}}" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
