<h1>Categories</h1>

{{#if error}}
<p class="error">{{error}}</p>
{{/if}}

<h2>Add Category</h2>
<form class='storeForm' action="/categories" method="POST">
    <label for="category_name">Name:</label>
    <input type="text" id="category_name" name="category_name" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" rows="3"></textarea>

    <button type="submit">Add Category</button>
</form>

<hr>

<h2>Existing Categories</h2>
<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
        <tr>
            <td>{{id_category}}</td>
            <td>{{category_name}}</td>
            <td>{{description}}</td>
            <td>
                <form action="/categories/delete/{{id_category}}" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
